<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="blocks/addusers/db" VERSION="20160922" COMMENT="XMLDB file for Moodle blocks/addusers"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../lib/xmldb/xmldb.xsd"
>
  <TABLES>
    <TABLE NAME="block_addusers_usercredits" COMMENT="Users Credits">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="groupid" TYPE="int" LENGTH="10" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="amount" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="fk_adduser_usercredits_groupid" TYPE="foreign" FIELDS="groupid" REFTABLE="block_addusers_groups" REFFIELDS="id"/>
      </KEYS>
    </TABLE>
    <TABLE NAME="block_addusers_history" COMMENT="History of user transactions">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="groupid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="amount" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="dateofpurchase" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="course_courseid" TYPE="int" LENGTH="10" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="user_userid" TYPE="int" LENGTH="10" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="comment" TYPE="text" NOTNULL="false" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="fk_history_course_courseid" TYPE="foreign" FIELDS="course_courseid" REFTABLE="course" REFFIELDS="id"/>
        <KEY NAME="history_user_userid" TYPE="foreign" FIELDS="user_userid" REFTABLE="user" REFFIELDS="id"/>
        <KEY NAME="fk_addusers_history_groupid" TYPE="foreign" FIELDS="groupid" REFTABLE="block_addusers_groups" REFFIELDS="id"/>
      </KEYS>
    </TABLE>
    <TABLE NAME="block_addusers_createdusers" COMMENT="Created Users">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="user_userid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="creator_userid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="groupid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="fk_creator_userid" TYPE="foreign" FIELDS="creator_userid" REFTABLE="user" REFFIELDS="id"/>
        <KEY NAME="fk_user_userid" TYPE="foreign" FIELDS="user_userid" REFTABLE="user" REFFIELDS="id"/>
        <KEY NAME="fk_block_addusers_createdusers_groupid" TYPE="foreign" FIELDS="groupid" REFTABLE="block_addusers_groups" REFFIELDS="id"/>
      </KEYS>
    </TABLE>
    <TABLE NAME="block_addusers_requirements" COMMENT="Course Requirements">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="course_courseid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="costs" TYPE="int" LENGTH="8" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="days" TYPE="int" LENGTH="3" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="hours_required" TYPE="int" LENGTH="2" NOTNULL="false" DEFAULT="4" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="fk_course_courseid" TYPE="foreign" FIELDS="course_courseid" REFTABLE="course" REFFIELDS="id"/>
      </KEYS>
    </TABLE>
    <TABLE NAME="block_addusers_groups" COMMENT="groups">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="groupname" TYPE="text" NOTNULL="true" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
    </TABLE>
  </TABLES>
</XMLDB>